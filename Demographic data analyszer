import pandas as pd

def calculate_demographic_data(df):
    # 1. How many people of each race are represented in this dataset?
    race_count = df['race'].value_counts()

    # 2. What is the average age of men?
    average_age_men = round(df[df['sex'] == 'Male']['age'].mean(), 1)

    # 3. What percentage of people have a Bachelor's degree?
    bachelors_percent = round((df['education'] == 'Bachelors').mean() * 100, 1)

    # 4. What percentage of people with advanced education make more than 50K?
    advanced_edu = df['education'].isin(['Bachelors', 'Masters', 'Doctorate'])
    advanced_high_earn = df[advanced_edu & (df['salary'] == '>50K')].shape[0]
    advanced_total = advanced_edu.sum()
    higher_education_rich = round((advanced_high_earn / advanced_total) * 100, 1)

    # 5. What percentage of people without advanced education make more than 50K?
    non_advanced_edu = ~advanced_edu
    non_advanced_high_earn = df[non_advanced_edu & (df['salary'] == '>50K')].shape[0]
    non_advanced_total = non_advanced_edu.sum()
    lower_education_rich = round((non_advanced_high_earn / non_advanced_total) * 100, 1)

    # 6. What is the minimum number of hours a person works per week?
    min_work_hours = df['hours-per-week'].min()

    # 7. What percentage of the people who work the minimum number of hours per week have a salary of more than 50K?
    min_workers = df[df['hours-per-week'] == min_work_hours]
    rich_min_workers = min_workers[min_workers['salary'] == '>50K'].shape[0]
    min_work_rich_percent = round((rich_min_workers / min_workers.shape[0]) * 100, 1)

    # 8. What country has the highest percentage of people that earn >50K and what is that percentage?
    country_earn = df[df['salary'] == '>50K']['native-country'].value_counts()
    country_total = df['native-country'].value_counts()
    country_percent = (country_earn / country_total * 100).round(1)
    highest_earning_country = country_percent.idxmax()
    highest_earning_country_percentage = country_percent.max()

    # 9. Identify the most popular occupation for those who earn >50K in India.
    india_high_earn = df[(df['native-country'] == 'India') & (df['salary'] == '>50K')]
    top_IN_occupation = india_high_earn['occupation'].value_counts().idxmax()

    return {
        'race_count': race_count,
        'average_age_men': average_age_men,
        'percentage_bachelors': bachelors_percent,
        'higher_education_rich': higher_education_rich,
        'lower
